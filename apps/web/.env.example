# BlueStay Web Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# API ENDPOINTS
# ============================================
# Public (used in browser)
NEXT_PUBLIC_API_URL=http://localhost:4000/graphql
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Server-side (used in SSR)
API_URL=http://localhost:4000/graphql

# ============================================
# PAYMENT GATEWAYS
# ============================================
NEXT_PUBLIC_RAZORPAY_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# ============================================
# ANALYTICS (Optional)
# ============================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_GTM_ID=

# ============================================
# MAPS
# ============================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_HOURLY_BOOKING=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_MULTI_CURRENCY=false

# ============================================
# CDN / IMAGES
# ============================================
NEXT_PUBLIC_CDN_URL=
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,bluestay.in
